<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FFF"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/dialog_voucher_result_view"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="#0F0" />

    <TextView
        android:id="@+id/dialog_voucher_result_textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dialog_voucher_result_view"
        android:gravity="center"
        android:text="恭喜你，充值结果"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/dialog_voucher_result_imageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="42dp"
        android:src="@drawable/dialog_voucher_result_success"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>